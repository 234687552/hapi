{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "lib": ["es2020", "es2022"],
        "rootDir": "src",
        "noEmit": true,
        "types": ["node", "bun-types"],
        "baseUrl": "..",
        "paths": {
            "@/*": ["cli/src/*", "backend/src/*"]
